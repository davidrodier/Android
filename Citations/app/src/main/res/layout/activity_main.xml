<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/terminator"
            android:src="@drawable/terminator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="afficherInfosBoutonImage"/>
        <ImageButton
            android:id="@+id/glados"
            android:src="@drawable/glados"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="afficherInfosBoutonImage"/>
        <ImageButton
            android:id="@+id/hitler"
            android:src="@drawable/hitler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="afficherInfosBoutonImage"/>
    </LinearLayout>

    <TextView
        android:id="@+id/_textZone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
